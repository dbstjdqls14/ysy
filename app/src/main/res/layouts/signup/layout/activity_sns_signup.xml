<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".signup.SnsSignup"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="0.9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signup_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.94"
                android:paddingBottom="10dp">

                <include
                    android:id="@+id/header"
                    layout="@layout/back_header"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/title_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/header"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/signup_info_box">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="필수 정보 입력"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans_medium"
                        android:textSize="22dp"
                        android:includeFontPadding="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="원할한 서비스 이용을 위해 추가 정보를 입력해주세요."
                        android:textColor="#707070"
                        android:fontFamily="@font/notosans_regular"
                        android:textSize="14dp"
                        android:includeFontPadding="false" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/signup_info_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toBottomOf="@id/title_box"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <LinearLayout
                        android:id="@+id/name_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/phone_box">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"
                            android:text="이름"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/name_input"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/notosans_regular"
                            android:hint="이름을 입력해주세요."
                            android:includeFontPadding="false"
                            android:privateImeOptions="defaultInputmode=korean"
                            android:textSize="14dp"
                            android:theme="@style/EditTextStyle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textColor="@color/error"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phone_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/name_box"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="핸드폰 번호"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/phone_input"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="핸드폰을 입력해주세요. ex)01012345678"
                            android:textSize="14dp"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:theme="@style/EditTextStyle"
                            android:inputType="phone"
                            android:maxLength="13"/>

                        <TextView
                            android:id="@+id/phone_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textColor="@color/error"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/birthday_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/phone_box"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="생년월일"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/birthday_input"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="number"
                            android:hint="생년월일을 입력해주세요. ex)20001126"
                            android:textSize="14dp"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:theme="@style/EditTextStyle"
                            android:maxLength="8" />

                        <TextView
                            android:id="@+id/birthday_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textColor="@color/error"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include layout="@layout/sign_btn" />
</LinearLayout>